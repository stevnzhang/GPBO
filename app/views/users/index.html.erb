<% if current_user.role? :admin %>
  <h4>Employees at GPBO</h4>
  <table class="striped highlight">
    <thead>
      <th>Username</th>
      <th>Role</th>
    </thead>
    <% for user in @employees %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.role.capitalize %></td>
      </tr>
    <% end %>
  </table>
<% end %>