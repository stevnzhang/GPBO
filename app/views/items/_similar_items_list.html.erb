<br />
<% unless @similar_items.empty? %>
  <div class="card yellow lighten-4">
    <div class="card-content">
      <span class="card-title">Similar Items</span>
      <ul>
        <% for item in @similar_items %>
          <li><%= link_to item.name, items_path(item) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>